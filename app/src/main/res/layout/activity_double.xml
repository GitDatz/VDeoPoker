<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_double"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="9"
    android:background="#0000CC">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:text="DOUBLE UP!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/doubleText"
            android:textSize="20sp"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:textColor="@android:color/background_light" />

        <TextView
            android:text="Straight wins $20!"
            android:id="@+id/winHandText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"/>

        <TextView
            android:text="Double up to $40?"
            android:id="@+id/doubleUpQuestionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:text="NO"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_shape"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:id="@+id/noButton"/>
            <Button
                android:text="YES"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_shape"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:id="@+id/yesButton" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:gravity="center">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:id="@+id/doubleCardViewOne"
            app:srcCompat="@drawable/background_card" />

        <ImageView
            android:layout_width="120dp"
            app:srcCompat="@drawable/background_card"
            android:id="@+id/doubleCardViewTwo"
            android:layout_height="100dp"/>

        <ImageView
            android:layout_width="120dp"
            app:srcCompat="@drawable/background_card"
            android:id="@+id/doubleCardViewThree"
            android:layout_height="100dp"/>

        <ImageView
            android:layout_width="120dp"
            app:srcCompat="@drawable/background_card"
            android:id="@+id/doubleCardViewFour"
            android:layout_height="100dp"/>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/background_card"
            android:id="@+id/doubleCardViewFive"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="center">

        <TextView
            android:layout_width="80dp"
            android:id="@+id/cashViewDouble"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#fff200"
            android:textAlignment="center" />

    </LinearLayout>
</LinearLayout>