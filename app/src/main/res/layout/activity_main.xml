<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="8"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimary"
    tools:context="com.vdthai.vdeopoker.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center">
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:columnCount="4"
        android:rowCount="5">
        <TextView
            android:layout_width="150dp"
            android:id="@+id/royalFlushVal"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:text="ROYAL FLUSH"
            android:textStyle="bold"
            android:textColor="#fff200"/>

        <TextView
            android:layout_width="100dp"
            android:id="@+id/royalFlushTxt"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:text="250"
            android:textStyle="bold"
            android:textColor="#fff200"/>

        <TextView
            android:layout_width="150dp"
            android:id="@+id/straightFlushTxt"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:text="STRAIGHT FLUSH"
            android:textStyle="bold"
            android:textColor="#fff200"/>

        <TextView
            android:layout_width="100dp"
            android:id="@+id/straightFlushVal"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:text="150"
            android:textStyle="bold"
            android:textColor="#fff200"/>

        <TextView
            android:layout_width="150dp"
            android:id="@+id/fourOfKindTxt"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:text="FOUR OF A KIND"
            android:textStyle="bold"
            android:textColor="#fff200"/>

        <TextView
            android:layout_width="100dp"
            android:id="@+id/fourOfKindVal"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:text="100"
            android:textStyle="bold"
            android:textColor="#fff200"/>

        <TextView
            android:layout_width="150dp"
            android:id="@+id/fullHouseTxt"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:text="FULL HOUSE"
            android:textStyle="bold"
            android:textColor="#fff200"/>

        <TextView
            android:layout_width="100dp"
            android:id="@+id/fullHouseVal"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:text="  50"
            android:textStyle="bold"
            android:textColor="#fff200"/>

        <TextView
            android:layout_width="150dp"
            android:id="@+id/flushTxt"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:text="FLUSH"
            android:textStyle="bold"
            android:textColor="#fff200"/>

        <TextView
            android:layout_width="100dp"
            android:id="@+id/flushVal"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="1"
            android:text="  35"
            android:textStyle="bold"
            android:textColor="#fff200"/>

        <TextView
            android:layout_width="150dp"
            android:id="@+id/straightTxt"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:text="STRAIGHT"
            android:textStyle="bold"
            android:textColor="#fff200"/>

        <TextView
            android:layout_width="50dp"
            android:id="@+id/straightVal"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="3"
            android:text="  20"
            android:textStyle="bold"
            android:textColor="#fff200"/>

        <TextView
            android:layout_width="150dp"
            android:id="@+id/threeOfKindTxt"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:text="THREE OF A KIND"
            android:textStyle="bold"
            android:textColor="#fff200"/>

        <TextView
            android:layout_width="50dp"
            android:id="@+id/threeOfKindVal"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="3"
            android:text="  10"
            android:textStyle="bold"
            android:textColor="#fff200"/>

        <TextView
            android:layout_width="150dp"
            android:id="@+id/twoPairTxt"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="2"
            android:text="TWO PAIR"
            android:textStyle="bold"
            android:textColor="#fff200"/>

        <TextView
            android:layout_width="50dp"
            android:id="@+id/twoPairVal"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="3"
            android:text="    5"
            android:textStyle="bold"
            android:textColor="#fff200"/>

        <TextView
            android:layout_width="150dp"
            android:id="@+id/jacksTxt"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="2"
            android:text="JACKS OR BETTER"
            android:textStyle="bold"
            android:textColor="#fff200"/>

        <TextView
            android:layout_width="50dp"
            android:id="@+id/jacksVal"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="3"
            android:text="    1"
            android:textStyle="bold"
            android:textColor="#fff200"/>

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/resultTxt"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="2"
            android:text=""
            android:textStyle="bold"
            android:textColor="#ff0900"/>

    </GridLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="center">

        <TextView
            android:layout_width="100dp"
            android:id="@+id/holdTxt1"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#ff0000"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="100dp"
            android:id="@+id/holdTxt2"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#ff0000"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="100dp"
            android:id="@+id/holdTxt3"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#ff0000"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="100dp"
            android:id="@+id/holdTxt4"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#ff0000"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="100dp"
            android:id="@+id/holdTxt5"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#ff0000"
            android:textAlignment="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/background_card"
            android:id="@+id/cardViewOne"/>

        <ImageView
            android:layout_width="100dp"
            app:srcCompat="@drawable/background_card"
            android:id="@+id/cardViewTwo"
            android:layout_height="80dp"/>

        <ImageView
            android:layout_width="100dp"
            app:srcCompat="@drawable/background_card"
            android:id="@+id/cardViewThree"
            android:layout_height="80dp"/>

        <ImageView
            android:layout_width="100dp"
            app:srcCompat="@drawable/background_card"
            android:id="@+id/cardViewFour"
            android:layout_height="80dp"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/background_card"
            android:id="@+id/cardViewFive"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:gravity="center">

        <Button
            android:text="DEAL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dealButton"/>

        <Button
            android:text="BET ONE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/betOneButton"/>

        <Button
            android:text="BET MAX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/betMaxButton" />


        <TextView
            android:layout_width="80dp"
            android:id="@+id/betView"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#fff200"
            android:textAlignment="center"
            android:text="BET: "/>

        <TextView
            android:layout_width="80dp"
            android:id="@+id/cashView"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#fff200"
            android:textAlignment="center" />

    </LinearLayout>

</LinearLayout>
