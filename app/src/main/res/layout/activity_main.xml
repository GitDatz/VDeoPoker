<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="9"
    android:background="@color/colorPrimary"
    tools:context="com.vdthai.vdeopoker.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:gravity="center">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scoreListView">
        </ListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="center">

        <TextView
            android:layout_width="100dp"
            android:id="@+id/holdTxt1"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#ff0000"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="100dp"
            android:id="@+id/holdTxt2"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#ff0000"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="100dp"
            android:id="@+id/holdTxt3"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#ff0000"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="100dp"
            android:id="@+id/holdTxt4"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#ff0000"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="100dp"
            android:id="@+id/holdTxt5"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#ff0000"
            android:textAlignment="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/background_card"
            android:id="@+id/cardViewOne"/>

        <ImageView
            android:layout_width="100dp"
            app:srcCompat="@drawable/background_card"
            android:id="@+id/cardViewTwo"
            android:layout_height="80dp"/>

        <ImageView
            android:layout_width="100dp"
            app:srcCompat="@drawable/background_card"
            android:id="@+id/cardViewThree"
            android:layout_height="80dp"/>

        <ImageView
            android:layout_width="100dp"
            app:srcCompat="@drawable/background_card"
            android:id="@+id/cardViewFour"
            android:layout_height="80dp"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/background_card"
            android:id="@+id/cardViewFive"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:gravity="center">

        <Button
            android:text="DEAL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dealButton"/>

        <Button
            android:text="BET ONE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/betOneButton"/>

        <Button
            android:text="BET MAX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/betMaxButton" />


        <TextView
            android:layout_width="80dp"
            android:id="@+id/betView"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#fff200"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="80dp"
            android:id="@+id/cashView"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="#fff200"
            android:textAlignment="center" />

    </LinearLayout>

</LinearLayout>
